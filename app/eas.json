{
    "cli": {
        "appVersionSource": "remote"
    },
    "build": {
        "development": {
            "distribution": "internal",
            "developmentClient": true,
            "android": {
                "buildType": "apk"
            },
            "env": {
                "APP_VARIANT": "development"
            }
        },
        "preview": {
            "distribution": "internal",
            "env": {
                "APP_VARIANT": "preview"
            }
        },
        "production": {
            "autoIncrement": true,
            "android": {
                "buildType": "app-bundle"
            }
        }
    },
    "submit": {
        "production": {
            "android": {
                "serviceAccountKeyPath": "./service-account-file.json",
                "track": "internal",
                "releaseStatus": "draft"
            }
        }
    }
}
